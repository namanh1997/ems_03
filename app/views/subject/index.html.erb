<% provide :title, t(".title") %>
<h1><%= t ".header" %></h1>

<% if signed_in? %>
  <% if current_supervisor? %>
    <div class="container">
      <%= button_to t(".new_subject"), {action: :new}, {method: :get,
        class: "btn btn-primary", id: "btn-new-subject"} %>
    </div>
  <% end %>
<% end %>

<div class="container">
  <ul class="subjects">
    <% @subjects.each_slice(3) do |chunk| %>
      <% chunk.each do |subject| %>
        <div class="col-xs-12 col-sm-6 col-md-6 col-lg-4 col-centered">
          <%= link_to subject.name, exams_path(subject_id: subject.id) %>
        </div>
      <% end %>
    <% end %>
  </ul>
</div>

<%= paginate @subjects, theme: "twitter-bootstrap-3" %>
